<h1>File Upload</h1>

<table>
  <thead>
    <tr>
      <th>Match Gene Name</th>
      <th>Match Gene Dna</th>
      <th>Percent Similarity</th>
    </tr>
  <tbody>
    <% @hits.each do |h| %>
    <tr>
      <td><%= h.match_gene_name %></td>
      <td><%= h.match_gene_dn %></td>
      <td><%= h.percent_similarity %></td>
    </tr>
    <% end %>
  </tbody>
</table>


  <%= form_tag reports_import_path, multipart: true do %>
    <label for="file">CSV to Upload</label>
    <p><%= file_field_tag "csv" %></p>
    <p><%= submit_tag %></p>
  <% end %>
