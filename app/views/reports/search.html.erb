<h1>Search</h1>

  <%=form_tag(reports_search_path, method: "get") do%>
    <p><%=label_tag :search %>
    <%=text_field_tag :search %></p>
    <%=submit_tag "Search" %>
  <% end %>

<% if @hits %>
  <table>
    <thead>
      <tr>
        <th>Matching Gene Name</th>
        <th>Matching DNA</th>
        <th>Percent Similarity</th>
      </tr>
    </thead>
    <tbody>
      <% @hits.each do |h| %>
        <tr>
          <td><%= h.match_gene_name %></td>
          <td><%= h.match_gene_dna.first(100) %></td>
          <td><%= h.percent_similarity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p> Please enter a search term. </p>
<% end %>
